{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "//#check:type": {},
    "lint:fix": {},
    "clean": {
      "cache": false
    },
    "check-circular-deps": {}
  },
  "globalEnv": [
    "NEXT_PUBLIC_CONVEX_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "CONVEX_AUTH_ADAPTER_SECRET"
  ]
}
