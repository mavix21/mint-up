{
  "name": "mini",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@4.1.1",
  "scripts": {
    "dev": "yarn with-env next dev",
    "build": "cd ../.. && yarn build && cd apps/mini && yarn next:build",
    "next:build": "yarn with-env next build",
    "start": "yarn with-env next start",
    "serve": "NODE_ENV=production yarn with-env next start --port 8151",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "with-env": "dotenv -e ../../.env -c --",
    "check:type": "tsc --outDir /tmp",
    "check:type:watch": "yarn check:type -w"
  },
  "dependencies": {
    "@auth/core": "^0.34.2",
    "@coinbase/onchainkit": "^0.38.19",
    "@farcaster/auth-client": "0.7.0",
    "@farcaster/auth-kit": "^0.8.1",
    "@my/backend": "*",
    "@my/ui": "*",
    "@neynar/nodejs-sdk": "^3.34.0",
    "@tamagui/next-theme": "^1.137.3",
    "@tamagui/react-native-svg": "^1.137.3",
    "@tanstack/react-query": "5.85.5",
    "@trpc/server": "^10.45.2",
    "@vercel/og": "^0.8.5",
    "app": "*",
    "jose": "^6.0.12",
    "next": "15.3.2",
    "next-auth": "^4.24.11",
    "raf": "^3.4.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "vercel": "latest",
    "viem": "^2.31.7",
    "wagmi": "^2.15.6",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "15.3.2",
    "@next/eslint-plugin-next": "15.3.2",
    "@tamagui/next-plugin": "^1.137.3",
    "@types/node": "^24.1.0",
    "dotenv-cli": "^8.0.0"
  }
}
